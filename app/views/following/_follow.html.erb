<% if user_signed_in? %>   
	<% if user==current_user %>
		<%= link_to "Edit Profile", edit_user_path(current_user), class:"btn btn-default" %>
	<% else %>
		<% if user.follows.map(&:user_id).include?(current_user.id) %>
			<%= link_to 'Unfoll', unfoll_path(user.id),method: :delete,
			data: {confirm: 'Are you sure?'},
			class: 'btn btn-danger' %>		
		<% else %>	
			<%= link_to 'Follow', follow_path(user.id), class: 'btn btn-primary' %>
		<% end %>
	<% end %>
<% end %>